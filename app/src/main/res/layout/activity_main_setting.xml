<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background"
    tools:context="com.example.administrator.screenpet.MainSettingActivity">

    <Button
        android:id="@+id/start_float_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Float Window"
        android:alpha="0.7"></Button>

    <Button
        android:id="@+id/add_clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Clock"
        android:alpha="0.7"></Button>

    <Button
        android:id="@+id/add_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add schedule"
        android:alpha="0.7"></Button>

    <Button
        android:id="@+id/customize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="Customize" />

    <Button
        android:id="@+id/adopt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="Adopt a New Pet" />

    <Button
        android:id="@+id/setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:text="Setting" />


</LinearLayout>
